<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:textColorHint="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.TextInputLayout"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <EditText
            android:backgroundTint="@color/black"
            android:textColor="@color/black"
            android:hint="Enter grade"
            android:id="@+id/edit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters" />
    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_20"
            android:gravity="center_vertical|start"
            android:text="Essential"
            android:textSize="15sp"/>

        <cn.refactor.library.SmoothCheckBox
            android:layout_marginStart="150dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="right"
            android:id="@+id/essential"
            android:layout_width="20dp"
            android:layout_height="22dp"
            app:color_checked="@color/primary_dark"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_20"
            android:gravity="center_vertical|start"
            android:text="Relevant"
            android:textSize="15sp"/>

        <cn.refactor.library.SmoothCheckBox
            android:layout_marginStart="154dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="right"
            android:id="@+id/relevant"
            android:layout_width="20dp"
            android:layout_height="22dp"
            app:color_checked="@color/primary_dark"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_20"
            android:gravity="center_vertical|start"
            android:text="Desirable"
            android:textSize="15sp"/>

        <cn.refactor.library.SmoothCheckBox
            android:layout_marginStart="150dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="right"
            android:id="@+id/desirable"
            android:layout_width="20dp"
            android:layout_height="22dp"
            app:color_checked="@color/primary_dark"/>

    </LinearLayout>
</LinearLayout>